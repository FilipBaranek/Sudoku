<UserControl x:Class="Sudoku.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.InputBindings>
        <KeyBinding Key="Esc"
                    Command="{Binding PauseTrigger}"/>
    </UserControl.InputBindings>

    <Grid Background="{DynamicResource Background}">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="/Images/logo.png"/>

        <ItemsControl Grid.Row="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      ItemsSource="{Binding GameCells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="9" Columns="9"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Style="{DynamicResource GameButton}"
                            Command="{Binding Command}"
                            CommandParameter="{Binding Parameter}"
                            Background="{Binding Background}"
                            BorderThickness="{Binding BorderThickness}"
                            Content="{Binding Content}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl Grid.Row="2"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              ItemsSource="{Binding PivotElements}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton Style="{DynamicResource PivotButton}"
                                 GroupName="PivotGroup"
                                 Command="{Binding Command}"
                                 CommandParameter="{Binding Value}"
                                 Content="{Binding Content}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="3" 
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Style="{DynamicResource GameText}"
                           Text="Time left: "/>
                <TextBlock Style="{DynamicResource GameText}"
                           Text="{Binding TimeLeft}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Style="{DynamicResource GameText}"
                           Text="Incorrect left: "/>
                <TextBlock Style="{DynamicResource GameText}"
                           Text="{Binding Incorrect}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.RowSpan="4" 
              Background="#CC000000" 
              Visibility="{Binding PauseManager.Pause}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                <TextBlock Style="{DynamicResource PauseText}"
                           Text="PAUSE MENU"/>
                <Button Style="{DynamicResource PauseButton}"
                        Content="Resume"
                        Command="{Binding PauseTrigger}"/>
                <Button Style="{DynamicResource PauseButton}"
                        Content="Rules"
                        Command="{Binding Rules}"/>
                <Button Style="{DynamicResource PauseButton}"
                        Content="Back to menu"
                        Command="{Binding BackToMenu}"/>
            </StackPanel>
        </Grid>
        
    </Grid>
    
</UserControl>
