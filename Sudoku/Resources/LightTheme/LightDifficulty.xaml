<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Difficulty.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Button -->
    <SolidColorBrush x:Key="HoverBackground" Color="Turquoise"/>
    <SolidColorBrush x:Key="PressedBackground" Color="White"/>

    <Style x:Key="DifficultyButton" TargetType="Button" BasedOn="{StaticResource DifficultyButtonStyle}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Turquoise"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Text -->
    <Style x:Key="DifficultyText" TargetType="TextBlock" BasedOn="{StaticResource DifficultyTextStyle}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>

</ResourceDictionary>