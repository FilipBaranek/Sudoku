<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Rules.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Header -->
    <Style x:Key="Header" TargetType="TextBlock" BasedOn="{StaticResource HeaderStyle}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
    <!-- Paragraph header -->
    <Style x:Key="ParagraphHeader" TargetType="TextBlock" BasedOn="{StaticResource ParagraphHeaderStyle}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
    <!-- Small header -->
    <Style x:Key="ParagraphSmallHeader" TargetType="TextBlock" BasedOn="{StaticResource ParagrapSmallhHeaderStyle}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
    <!-- Paragraph -->
    <Style x:Key="Paragraph" TargetType="TextBlock" BasedOn="{StaticResource ParagraphStyle}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Back button -->
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="Turquoise"/>
    <SolidColorBrush x:Key="ButtonPressedBackgruond" Color="White"/>

    <Style x:Key="Button" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Images -->
    <BitmapImage x:Key="Crosshair" UriSource="/Images/Tools/light_crosshair.png"/>
    <BitmapImage x:Key="Training" UriSource="/Images/light_training.png"/>
    <BitmapImage x:Key="Game" UriSource="/Images/light_game.png"/>
    <BitmapImage x:Key="Candidates" UriSource="/Images/Tools/light_candidates.png"/>
    <BitmapImage x:Key="MarkedNumbers" UriSource="/Images/Tools/light_marked_numbers.png"/>
    <BitmapImage x:Key="SingleNaked" UriSource="/Images/Strategies/light_single_naked.png"/>
    <BitmapImage x:Key="SingleHidden" UriSource="/Images/Strategies/light_single_hidden.png"/>
    <BitmapImage x:Key="DoubleNaked" UriSource="/Images/Strategies/light_double_naked.png"/>
    <BitmapImage x:Key="DoubleHidden" UriSource="/Images/Strategies/light_double_hidden.png"/>
    <BitmapImage x:Key="NakedTriple" UriSource="/Images/Strategies/light_naked_triple.png"/>


</ResourceDictionary>