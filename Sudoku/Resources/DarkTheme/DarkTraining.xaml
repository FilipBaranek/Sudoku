<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DarkGame.xaml"/>
        <ResourceDictionary Source="../Training.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Logo -->
    <Style x:Key="HintMenuLogo" TargetType="Image" BasedOn="{StaticResource HintMenuLogoStyle}"/>

    <!-- Hint button -->
    <SolidColorBrush x:Key="HintButtonHoverBackground" Color="Turquoise"/>
    <SolidColorBrush x:Key="HintButtonPressedBackground" Color="#111"/>

    <Style x:Key="HintButton" TargetType="Button" BasedOn="{StaticResource HintButtonStyle}">
        <Setter Property="Background" Value="#111"/>
        <Setter Property="Foreground" Value="#DCDCAA"/>
    </Style>
    
    <!-- Hint message window -->
    <Style x:Key="HintMessageBorder" TargetType="Border" BasedOn="{StaticResource HintMessageBorderStyle}">
        <Setter Property="BorderBrush" Value="#333"/>
        <Setter Property="Background" Value="#E6000000"/>
    </Style>

    <!-- Hint message -->
    <Style x:Key="HintMessage" TargetType="TextBlock" BasedOn="{StaticResource HintMessageStyle}">
        <Setter Property="Foreground" Value="#DCDCAA"/>
    </Style>

    <!-- Close button -->
    <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource CloseButtonStyle}"/>

    <!-- Options header -->
    <Style x:Key="HintOptionsHeader" TargetType="TextBlock" BasedOn="{StaticResource HintOptionsHeaderStyle}">
        <Setter Property="Foreground" Value="Turquoise"/>
    </Style>
    
    <!-- Options -->
    <SolidColorBrush x:Key="IsChecked" Color="#DCDCAA"/>
    <SolidColorBrush x:Key="IsNotChecked" Color="#80DCDCAA"/>
    <SolidColorBrush x:Key="OptionsBackground" Color="#111"/>
    
    <Style x:Key="CheckBox" TargetType="CheckBox" BasedOn="{StaticResource CheckBoxStyle}">
        <Setter Property="Foreground" Value="#DCDCAA"/>
        <Setter Property="Background" Value="#111"/>
        <Setter Property="BorderBrush" Value="#333"/>
    </Style>

    <!-- Rolldown options -->
    <Style x:Key="Algorithms" TargetType="ComboBox" BasedOn="{StaticResource AlgorithmsStyle}">
        <Setter Property="Foreground" Value="#DCDCAA"/>
        <Setter Property="Background" Value="#111"/>
        <Setter Property="BorderBrush" Value="#333"/>
    </Style>

</ResourceDictionary>