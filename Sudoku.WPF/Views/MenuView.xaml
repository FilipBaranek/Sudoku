<UserControl x:Class="Sudoku.WPF.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid x:Name="MenuGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="{Binding Background}" Stretch="Fill"/>
        </Grid.Background>
        
        <Image Grid.Row="0" Source="/images/logo.png"/>

        <Button 
            Grid.Row="1"
            HorizontalAlignment="Center"
            Content="PLAY" FontSize="40"
            FontWeight="Bold" BorderThickness="5"
            Background="{Binding ButtonsBackground}"
            BorderBrush="Black"
            Margin="10"
            Padding="80, 0"
            Command="{Binding PlayCommand}"/>
        <Button
            Grid.Row="2"
            HorizontalAlignment="Center"
            Content="TRAINING"
            FontSize="40"
            FontWeight="Bold"
            BorderThickness="5"
            Background="{Binding ButtonsBackground}"
            BorderBrush="Black"
            Margin="10"
            Padding="30, 0"
            Command="{Binding TrainingCommand}"/>
        <Button
            Grid.Row="3"
            HorizontalAlignment="Center"
            Content="RULES"
            FontSize="40" 
            Margin="10"
            FontWeight="Bold"
            Background="{Binding ButtonsBackground}"
            BorderBrush="Black"
            BorderThickness="5"
            Padding="70, 0"/>
        <Button 
            Grid.Row="4"
            HorizontalAlignment="Center"
            Content="OPTIONS"
            FontSize="40"
            Margin="10"
            FontWeight="Bold"
            BorderThickness="5"
            Background="{Binding ButtonsBackground}"
            BorderBrush="Black"
            Padding="40, 0"/>
        <Button
            Grid.Row="5"
            HorizontalAlignment="Center"
            Content="QUIT"
            FontSize="40"
            Margin="10"
            FontWeight="Bold"
            BorderThickness="5"
            Background="{Binding ButtonsBackground}"
            BorderBrush="Black"
            Padding="80, 0"
            Command="{Binding QuitCommand}"/>
    
    </Grid>
</UserControl>
