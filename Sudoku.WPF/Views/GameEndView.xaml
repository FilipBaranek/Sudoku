<UserControl x:Class="Sudoku.WPF.Views.GameEndView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="{Binding Background}" Stretch="Fill"/>
        </Grid.Background>

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom" 
                   Text="{Binding EndGameMessage}"
                   Foreground="{Binding MessageColor}"
                   FontSize="140" 
                   FontWeight="ExtraBold"/>
        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300"
                Height="100"
                FontSize="40"
                FontWeight="Bold"
                Content="Back to menu"
                BorderThickness="4"
                BorderBrush="Black"
                Background="{Binding ButtonColor}"
                Command="{Binding ButtonCommand}"/>

    </Grid>
</UserControl>
