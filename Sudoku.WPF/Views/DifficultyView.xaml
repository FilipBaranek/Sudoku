<UserControl x:Class="Sudoku.WPF.Views.DifficultyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku.WPF.Views"
        mc:Ignorable="d">
    <Grid x:Name="DifficultyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Choose difficulty" FontSize="50" FontWeight="DemiBold"></TextBlock>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Button Height="80" Width="200" Content="EASY" Background="LightGreen" FontSize="30" FontWeight="Bold" Margin="10" Command="{Binding EasyCommand}"/>
            <Button Height="80" Width="200" Content="MEDIUM" Background="Orange" FontSize="30" FontWeight="Bold" Margin="10" Command="{Binding MediumCommand}"/>
            <Button Height="80" Width="200" Content="HARD" Background="Red" FontSize="30" FontWeight="Bold" Margin="10" Command="{Binding HardCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
